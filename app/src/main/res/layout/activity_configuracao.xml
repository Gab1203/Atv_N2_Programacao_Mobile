<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfiguracaoActivity">

    <TextView
        android:id="@+id/text_config"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Configurações"
        android:textSize="22sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/usuario_dados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dados do usuário"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/text_config"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/nomeUsuario"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="Nome"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/usuario_dados"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="12dp"/>

    <EditText
        android:id="@+id/pesoUsuario"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="Massa"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@+id/nomeUsuario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="12dp"/>

    <EditText
        android:id="@+id/altura"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="Altura"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@+id/pesoUsuario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="12dp"/>

    <RadioGroup
        android:id="@+id/sexo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/altura"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp">

        <RadioButton
            android:id="@+id/sexo_masculino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masculino"/>

        <RadioButton
            android:id="@+id/sexo_feminino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feminino"/>
    </RadioGroup>

    <EditText
        android:id="@+id/data_nascimento"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="Data de nascimento"
        android:inputType="date"
        app:layout_constraintTop_toBottomOf="@+id/sexo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="12dp"/>

    <TextView
        android:id="@+id/config_maps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Configurações de localização"
        app:layout_constraintTop_toBottomOf="@+id/data_nascimento"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/form_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipo de mapa"
        app:layout_constraintTop_toBottomOf="@+id/config_maps"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <RadioGroup
        android:id="@+id/map_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/form_map"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RadioButton
            android:id="@+id/map_satelite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Satélite"/>

        <RadioButton
            android:id="@+id/map_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vetorial"/>
    </RadioGroup>

    <TextView
        android:id="@+id/form_nav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forma de navegação"
        app:layout_constraintTop_toBottomOf="@+id/map_group"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <RadioGroup
        android:id="@+id/nav_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/form_nav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RadioButton
            android:id="@+id/nav_course_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Course Up"/>

        <RadioButton
            android:id="@+id/nav_north_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="North Up"/>
    </RadioGroup>

    <Button
        android:id="@+id/btnSalvar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salvar"
        app:layout_constraintTop_toBottomOf="@+id/nav_group"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
